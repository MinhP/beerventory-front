<div class="row">
    <div class="col-md-12">
        <h1>Edit Beer</h1>
        <form role="form" action="/beer/<%= @beer['upc'] %>" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" value="<%= @beer['name'] %>">
            </div>
            <div class="form-group">
                <label for="type">Type</label>
                <input type="text" class="form-control" id="type" value="<%= @beer['type'] %>">
            </div>
            <div class="form-group">
                <label for="qty">Quantity</label>
                <input type="number" class="form-control" id="qty" value="<%= @beer['qty'] %>">
            </div>
            <div class="form-group">
                <label for="upc">UPC</label>
                <input type="text" class="form-control" id="upc" value="<%= @beer['upc'] %>">
            </div>
            <input name="_method" type="hidden" value="put" />
            <input type="submit" class="btn btn-primary" value="Edit Beer">
        </form>
        <br>
        <%= link_to "Remove Beer", beer_path(@beer['upc']), 'method' => 'delete', 'class' => "btn btn-primary" %>
    </div>
</div>